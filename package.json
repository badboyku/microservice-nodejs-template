{
  "name": "microservice-nodejs-template",
  "description": "This is template repo for creating a node.js microservice.",
  "version": "1.0.15",
  "author": "badboyku",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badboyku/microservice-nodejs-template.git"
  },
  "main": "src/index",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc && tsc-alias",
    "build:dev": "rimraf dist && npm run build",
    "dev": "TS_NODE=true node -r ts-node/register -r tsconfig-paths/register -r dotenv/config -r ./src/index.ts",
    "start": "node -r dotenv/config dist/index.js",
    "clean": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean:coverage": "rimraf ./test_coverage",
    "healthcheck": "curl localhost:3000/health",
    "lint": "eslint \"./src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"./src/**/*.{js,ts}\" --fix",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage '--watchAll=false'",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "jest --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-correlation-id": "^3.0.1",
    "express-openapi-validator": "^5.5.8",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-correlation-id": "^1.2.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.1",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint-config-badboyku": "^1.0.41",
    "eslint-import-resolver-alias": "^1.1.2",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
